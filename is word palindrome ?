function isPalindrome(word){
let res = ''
for (let i = word.length - 1; i >= 0; i--) {
  res += word[i];
}
return (word === res) 
}

____________________________________

function isPalindrome(str){
let res = str.toLowerCase().replace(/\s/g,'').split('').reverse().join('')
return res === str.toLowerCase().replace(/\s/g,'')
}
