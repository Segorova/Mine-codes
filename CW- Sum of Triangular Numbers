function sumTriangularNumbers(n) {
 if (n < 0) return 0
  else {
    let res = 0, el = 0
       for (let i = 1; i <= n; i++) {
        el += i
        res += el
        }
   return res;
}}


***************************

function sumTriangularNumbers(n) {
  return n < 0 ? 0 : n * (n + 1) * (n + 2) / 6;
}
