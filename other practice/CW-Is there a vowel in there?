function isVow(a){
 return a.map(el => 'aeiou'.includes(String.fromCharCode(el)) ? String.fromCharCode(el) : el)
}
*************************
function isVow(array){
  return array.map(x => 'aeiou'.includes(y = String.fromCharCode(x)) ? y : x)
}

