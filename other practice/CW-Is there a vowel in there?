const v={"97":"a","101":"e","105":"i","111":"o","117":"u"}
const isVow=a=>a.map(x=>v[x]||x)

***************************
function isVow(a){
  return a.map(i => [97, 101, 105, 111, 117].includes(i) ? String.fromCharCode(i) : i);
}
