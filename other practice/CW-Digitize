function digitize(n) {
  let res = []
  n = n +''
    for (let i = 0; i < n.length; i++){
      res.push(+n[i])
    }
  return res
}

**************************
function digitize(n) {
  return String(n).split('').map(Number);
}
*********************************

const digitize = n => Array.from(String(n), e => Number(e));// СОЗДАНИЕ НОВОГО ARRAY 
